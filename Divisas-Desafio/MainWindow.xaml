<Window x:Class="Divisas_Desafio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Divisas_Desafio"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        WindowStartupLocation="CenterScreen"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/MainBG.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <!--CurrencyLayer Grid-->
        <Grid x:Name="CurrencyLayergrid" HorizontalAlignment="Left" Height="434" VerticalAlignment="Center" Width="400">
            <Label x:Name="CurrencyLayerlbl" Content="null" HorizontalAlignment="Left" Margin="119,161,0,0" VerticalAlignment="Top" FontSize="30"/>

        </Grid>
        <!--Banxico Grid-->
        <Grid x:Name="Banxicogrid" HorizontalAlignment="Left" Height="434" VerticalAlignment="Center" Width="400" Margin="400,0,0,0">
            <Label x:Name="Banxicolbl" Content="null" HorizontalAlignment="Left" Margin="119,161,0,0" VerticalAlignment="Top" FontSize="30"/>
        </Grid>

    </Grid>
</Window>
